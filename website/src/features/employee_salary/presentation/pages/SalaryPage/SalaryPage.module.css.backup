/**
 * SalaryPage Component Styles
 */

.container {
  min-height: 100vh;
  padding: 32px;
  background: var(--color-gray-50);
}

/* Page Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32px;
}

.title {
  font-size: 32px;
  font-weight: 700;
  color: var(--color-gray-900);
  margin: 0 0 8px 0;
}

.subtitle {
  font-size: 16px;
  color: var(--color-gray-600);
  margin: 0;
}

.headerActions {
  display: flex;
  gap: 12px;
}

/* Period Selector */
.periodSelector {
  display: flex;
  align-items: center;
  gap: 16px;
  background: var(--color-white);
  padding: 16px;
  border-radius: 12px;
  border: 1px solid var(--color-gray-200);
  margin-bottom: 32px;
  justify-content: center;
}

.currentPeriod {
  font-size: 18px;
  font-weight: 600;
  color: var(--color-gray-900);
  min-width: 200px;
  text-align: center;
}

/* Summary Grid */
.summaryGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
  margin-bottom: 32px;
}

.summaryCard {
  background: var(--color-white);
  border-radius: 12px;
  padding: 20px;
  border: 1px solid var(--color-gray-200);
  display: flex;
  align-items: center;
  gap: 16px;
}

.summaryIcon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  background: var(--color-blue-50);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  flex-shrink: 0;
}

.summaryInfo {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.summaryValue {
  font-size: 24px;
  font-weight: 700;
  color: var(--color-gray-900);
  line-height: 1;
}

.summaryLabel {
  font-size: 14px;
  color: var(--color-gray-600);
}

/* Table Section */
.tableSection {
  background: var(--color-white);
  border-radius: 16px;
  padding: 24px;
  border: 1px solid var(--color-gray-200);
  overflow: hidden;
}

.tableWrapper {
  overflow-x: auto;
}

.table {
  width: 100%;
  border-collapse: collapse;
}

.table thead th {
  text-align: left;
  padding: 12px 16px;
  font-size: 14px;
  font-weight: 600;
  color: var(--color-gray-700);
  border-bottom: 2px solid var(--color-gray-200);
  white-space: nowrap;
}

.table tbody td {
  padding: 16px;
  border-bottom: 1px solid var(--color-gray-100);
  font-size: 14px;
  color: var(--color-gray-900);
}

.table tbody tr:hover {
  background: var(--color-gray-50);
}

.table tbody tr:last-child td {
  border-bottom: none;
}

/* Employee Cell */
.employeeCell {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.employeeName {
  font-weight: 600;
  color: var(--color-gray-900);
}

.employeeEmail {
  font-size: 13px;
  color: var(--color-gray-600);
}

/* Amount Cells */
.amountCell {
  font-weight: 500;
  text-align: right;
}

.totalCell {
  font-weight: 700;
  font-size: 16px;
  text-align: right;
  color: var(--color-blue-600);
}

/* Status Badge */
.statusBadge {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
  text-transform: capitalize;
}

.statusBadge.pending {
  background: var(--color-yellow-100);
  color: var(--color-yellow-700);
}

.statusBadge.processing {
  background: var(--color-blue-100);
  color: var(--color-blue-700);
}

.statusBadge.paid {
  background: var(--color-green-100);
  color: var(--color-green-700);
}

/* Empty State */
.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 32px;
  text-align: center;
}

.emptyIcon {
  font-size: 64px;
  margin-bottom: 24px;
  opacity: 0.5;
}

.emptyTitle {
  font-size: 24px;
  font-weight: 600;
  color: var(--color-gray-900);
  margin: 0 0 12px 0;
}

.emptyText {
  font-size: 16px;
  color: var(--color-gray-600);
  margin: 0;
}

/* Loading State */
.loadingState {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400px;
}

.spinner {
  font-size: 18px;
  color: var(--color-gray-600);
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Error State */
.errorContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  text-align: center;
  padding: 48px;
}

.errorIcon {
  font-size: 64px;
  margin-bottom: 24px;
}

.errorTitle {
  font-size: 24px;
  font-weight: 600;
  color: var(--color-gray-900);
  margin: 0 0 12px 0;
}

.errorMessage {
  font-size: 16px;
  color: var(--color-gray-600);
  margin: 0 0 24px 0;
  max-width: 500px;
}

/* Responsive */
@media (max-width: 768px) {
  .container {
    padding: 16px;
  }

  .header {
    flex-direction: column;
    gap: 16px;
    align-items: stretch;
  }

  .title {
    font-size: 24px;
  }

  .periodSelector {
    flex-wrap: wrap;
  }

  .summaryGrid {
    grid-template-columns: 1fr;
  }

  .tableWrapper {
    overflow-x: scroll;
  }

  .table {
    min-width: 800px;
  }
}
