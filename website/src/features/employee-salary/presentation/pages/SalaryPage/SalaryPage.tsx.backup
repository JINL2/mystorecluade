/**
 * SalaryPage Component
 * Salary management page with monthly records and export functionality
 */

import React from 'react';
import { Navbar } from '@/shared/components/common/Navbar';
import { useSalary } from '../../hooks/useSalary';
import { TossButton } from '@/shared/components/toss/TossButton';
import { useAppState } from '@/app/providers/app_state_provider';
import type { SalaryPageProps } from './SalaryPage.types';
import styles from './SalaryPage.module.css';

export const SalaryPage: React.FC<SalaryPageProps> = ({
  initialMonth,
}) => {
  const { currentCompany } = useAppState();
  const companyId = currentCompany?.company_id || '';

  const {
    records,
    summary,
    loading,
    error,
    currentMonth,
    exporting,
    refresh,
    goToPreviousMonth,
    goToNextMonth,
    goToCurrentMonth,
    exportToExcel,
  } = useSalary(companyId, initialMonth);

  // Format month display (e.g., "January 2024")
  const formatMonthDisplay = (month: string): string => {
    const [year, monthNum] = month.split('-');
    const date = new Date(parseInt(year), parseInt(monthNum) - 1, 1);
    return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long' });
  };

  // Show loading if no company selected yet
  if (!currentCompany) {
    return (
      <>
        <Navbar activeItem="employee" />
        <div className={styles.container}>
          <div className={styles.header}>
            <h1 className={styles.title}>Salary Management</h1>
          </div>
          <div className={styles.loadingState}>
            <div className={styles.spinner}>Please select a company first...</div>
          </div>
        </div>
      </>
    );
  }

  if (loading) {
    return (
      <>
        <Navbar activeItem="employee" />
        <div className={styles.container}>
          <div className={styles.header}>
            <h1 className={styles.title}>Salary Management</h1>
          </div>
          <div className={styles.loadingState}>
            <div className={styles.spinner}>Loading salary data...</div>
          </div>
        </div>
      </>
    );
  }

  if (error) {
    return (
      <>
        <Navbar activeItem="employee" />
        <div className={styles.container}>
          <div className={styles.header}>
            <h1 className={styles.title}>Salary Management</h1>
          </div>
          <div className={styles.errorContainer}>
            <div className={styles.errorIcon}>‚ö†Ô∏è</div>
            <h2 className={styles.errorTitle}>Failed to Load Salary Data</h2>
            <p className={styles.errorMessage}>{error}</p>
            <TossButton onClick={refresh} variant="primary">
              Try Again
            </TossButton>
          </div>
        </div>
      </>
    );
  }

  return (
    <>
      <Navbar activeItem="employee" />
      <div className={styles.container}>
      {/* Page Header */}
      <div className={styles.header}>
        <div>
          <h1 className={styles.title}>Salary Management</h1>
          <p className={styles.subtitle}>Monthly salary records and payments</p>
        </div>
        <div className={styles.headerActions}>
          <TossButton
            variant="secondary"
            onClick={exportToExcel}
            disabled={exporting || records.length === 0}
          >
            {exporting ? 'üì§ Exporting...' : 'üì§ Export Excel'}
          </TossButton>
        </div>
      </div>

      {/* Period Selector */}
      <div className={styles.periodSelector}>
        <TossButton variant="outline" size="sm" onClick={goToPreviousMonth}>
          ‚óÄ Previous
        </TossButton>
        <div className={styles.currentPeriod}>{formatMonthDisplay(currentMonth)}</div>
        <TossButton variant="outline" size="sm" onClick={goToNextMonth}>
          Next ‚ñ∂
        </TossButton>
        <TossButton variant="outline" size="sm" onClick={goToCurrentMonth}>
          Today
        </TossButton>
      </div>

      {/* Summary Cards */}
      {summary && (
        <div className={styles.summaryGrid}>
          <div className={styles.summaryCard}>
            <div className={styles.summaryIcon}>üë•</div>
            <div className={styles.summaryInfo}>
              <div className={styles.summaryValue}>{summary.totalEmployees}</div>
              <div className={styles.summaryLabel}>Total Employees</div>
            </div>
          </div>
          <div className={styles.summaryCard}>
            <div className={styles.summaryIcon}>üí∞</div>
            <div className={styles.summaryInfo}>
              <div className={styles.summaryValue}>{summary.formattedTotalSalary}</div>
              <div className={styles.summaryLabel}>Total Salary</div>
            </div>
          </div>
          <div className={styles.summaryCard}>
            <div className={styles.summaryIcon}>üìä</div>
            <div className={styles.summaryInfo}>
              <div className={styles.summaryValue}>{summary.formattedAverageSalary}</div>
              <div className={styles.summaryLabel}>Average Salary</div>
            </div>
          </div>
          <div className={styles.summaryCard}>
            <div className={styles.summaryIcon}>üéÅ</div>
            <div className={styles.summaryInfo}>
              <div className={styles.summaryValue}>{summary.formattedTotalBonuses}</div>
              <div className={styles.summaryLabel}>Total Bonuses</div>
            </div>
          </div>
        </div>
      )}

      {/* Salary Table */}
      <div className={styles.tableSection}>
        {records.length === 0 ? (
          <div className={styles.emptyState}>
            <div className={styles.emptyIcon}>üìã</div>
            <h3 className={styles.emptyTitle}>No Salary Records</h3>
            <p className={styles.emptyText}>
              No salary data available for {formatMonthDisplay(currentMonth)}
            </p>
          </div>
        ) : (
          <div className={styles.tableWrapper}>
            <table className={styles.table}>
              <thead>
                <tr>
                  <th>Employee</th>
                  <th>Role</th>
                  <th>Store</th>
                  <th>Base Salary</th>
                  <th>Bonuses</th>
                  <th>Deductions</th>
                  <th>Total</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {records.map((record) => (
                  <tr key={record.userId}>
                    <td>
                      <div className={styles.employeeCell}>
                        <div className={styles.employeeName}>{record.fullName}</div>
                        <div className={styles.employeeEmail}>{record.email}</div>
                      </div>
                    </td>
                    <td>{record.roleName}</td>
                    <td>{record.storeName}</td>
                    <td className={styles.amountCell}>{record.formattedBaseSalary}</td>
                    <td className={styles.amountCell}>{record.formattedBonuses}</td>
                    <td className={styles.amountCell}>{record.formattedDeductions}</td>
                    <td className={styles.totalCell}>{record.formattedTotalSalary}</td>
                    <td>
                      <span className={`${styles.statusBadge} ${styles[record.status]}`}>
                        {record.status}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>
    </div>
    </>
  );
};

export default SalaryPage;
